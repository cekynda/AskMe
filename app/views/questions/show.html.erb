<% provide :page_title, @question.title %>
<% currently_at %>

<div class="card" style="width: 18rem; background-color: #C0C0C0">
  <div class="card-body">
    <h5 class="card-title"><%= @question.title %></h5>
    <hr>
    <div class="card-text"><%= sanitize @question.body %></div>
  </div>
</div>
<div class="btn-group mt-3">
<%= link_to 'Back', questions_path, class: 'btn btn-primary btn-sm' %>
<%= link_to "Edit", edit_question_path(@question), class: 'btn btn-info btn-sm' %>
<%= link_to "Destroy", question_path(@question),
                  method: :delete,
                  data: { confirm: "Are you sure?" }, class: 'btn btn-danger btn-sm' %>
</div>
<hr>
<h2>Answers:</h2>
<hr>
<%= paginate @answers%>

<%= render @question.answers %>

<%= paginate @answers %>

<hr>
<h2>Write an answer:</h2>

<%= render 'answers/form' %>



